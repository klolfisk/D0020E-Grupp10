<%= form_for(server) do |f| %>
  <% if server.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(server.errors.count, "error") %> prohibited this server from being saved:</h2>

      <ul>
      <% server.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-inputs">
  <div class="form-group has-success has-feedback">
    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field(:name, class: "form-control", placeholder: "Name") %>
  </div>

  <div class="form-group has-success has-feedback">
    <%= f.label :ip, class: "sr-only" %>
    <%= f.text_field(:ip, class: "form-control", placeholder: "Ip") %>
  </div>

  <div class="form-group has-success has-feedback">
    <%= f.label :port, class: "sr-only" %>
    <%= f.text_field(:port, class: "form-control", placeholder: "Port") %>
  </div>

  <div class="form-group has-success has-feedback">
    <%= f.label :running, class: "sr-only" %>
    <p> Running: <%= f.check_box :running %> </p>
  </div>


  <div class="actions">
    <%= f.submit(class: "btn btn-default") %>
  </div>

</div>


<% end %>

